@model List<MVC_Basics.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Products Index Page</h2>
@DateTime.Now
<table class="table table-bordered">

    <tr>
        <th>Product Id</th>
        <th>Product Name</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td>@item.ProductName</td>
        </tr>
    }


</table>


